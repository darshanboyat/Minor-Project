<!doctype html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>
    <link rel="stylesheet" href="css/SupportStyle.css">
    <title>Pizza Time | My Profile </title>
  </head>
  <body>
      <% if (!user) { %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">Pizza Time</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Account</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/contact">Contact us</a>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false"> More</a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <li><a class="dropdown-item" href="/about">About us</a></li>
                    <li><a class="dropdown-item" href="/follow">Follow us</a></li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </nav>
     <div class="popup"></div>
     <div class="container">
      <form action="/support" method="POST">
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Name* :- </span>
            <input type="text" class="form-control Name" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required>
          </div> <br>
        <div class="input-group mb-3">
            <span class="input-group-text " id="basic-addon1">Phone* :- </span>
            <input type="number" class="form-control phone" placeholder="Enter your Contact Number" aria-label="Username" aria-describedby="basic-addon1" required>
        </div> <br>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Email* :- </span>
          <input type="email" class="form-control phone" placeholder="Enter your email address" aria-label="mail" aria-describedby="basic-addon1" required>
      </div> <br>
        <select class="form-select mb-5" id="subject" aria-label="Default select example">
            <option value="0" selected disabled>Have problem regards</option>
            <option value="Order">Need help regards your order ?</option>
            <option value="Transaction">Need help regards your Transaction ? </option>
            <option value="Account">Need help regards your Account ? </option>
          </select>
          <div class="d-grid gap-2 mb-4 col-12 mx-auto">
              <textarea name="detail" id="description" cols="100" rows="10" placeholder="Please describe more about your problem" required></textarea>
          </div>
          <div class="d-grid gap-2 col-2 mx-auto">
            <button class="btn submitQuery btn-primary" type="submit">Submit</button>
        </div>
     </div>
    </form>
     <% } else { %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/success">Pizza Time</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/success">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/cart">Cart</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile">My Profile</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false"> More</a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <li><a class="dropdown-item" href="#">My Order</a></li>
                  <li><a class="dropdown-item" href="#">Transaction History</a></li>
                  <hr>
                  <li><a class="dropdown-item" href="/contact">Contact us</a></li>
                  <li><a class="dropdown-item" href="/about">About us</a></li>
                  <li><a class="dropdown-item" href="/follow">Follow us</a></li>
                </ul>
              </li>
              <span class="navbar-text">
                <form id="logout" action="/logout" method="POST" >
                  <a onclick="document.getElementById('logout').submit()">
                    <button type="button" class="btn btn-outline-danger">Logout</button>
                  </a>
                </form>
              </span>
            </ul>
          </div>
        </div>
      </nav>
      <% if(messages.error) { %>
        <div class="alert alert-danger" role="alert"> <%= messages.error %></div>
      <% } %> 
      <% if(messages.success) { %>
        <div class="alert alert-success" role="alert"> <%= messages.success %></div>
      <% } %>
      <div class="container">
          <form action="/support" method="POST">
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Name* :- </span>
                <input type="text" class="form-control Name" value="<%= user.name%>" name="Name" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required>
              </div> <br>
            <div class="input-group mb-3">
                <span class="input-group-text " id="basic-addon1">Phone* :- </span>
                <input type="number" class="form-control phone" value="<%= user.number%>" name="Number" placeholder="Enter your Contact Number" aria-label="Username" aria-describedby="basic-addon1" required>
            </div> <br>
            <select class="form-select mb-5" id="subject" aria-label="Default select example" required>
                <option name="subject" selected disabled>Have problem regards</option>
                <option name="subject">Need help regards your order ?</option>
                <option name="subject">Need help regards your Transaction ? </option>
                <option name="subject">Need help regards your Account ? </option>
              </select>
              <div class="d-grid gap-2 mb-4 col-12 mx-auto">
                  <textarea name="detail" id="description" cols="100" rows="10" placeholder="Please describe more about your problem" required></textarea>
              </div>
              <div class="d-grid gap-2 col-2 mx-auto">
                <button class="btn submitQuery btn-primary" type="submit">Submit</button>
            </div>
          </form>
      </div>
    <% } %>
    <script src="./js/custom.js"></script>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
